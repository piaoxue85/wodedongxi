           '       to_char(decode(MACD_DIF        ,null,''0.0'',MACD_DIF        ),''fm999999999999990.099999999999999999999'')||'',''||'+
           '       to_char(decode(MACD_MACD       ,null,''0.0'',MACD_MACD       ),''fm999999999999990.099999999999999999999'')||'',''||'+
